{
  "name": "lonely-git-cleaner",
  "version": "1.0.0",
  "description": "A comprehensive Git repository cleanup tool that safely removes stale branches and optimizes repository performance",
  "main": "bin/git-cleanup",
  "bin": {
    "git-cleanup": "./bin/git-cleanup"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "lint:md:fix": "markdownlint-cli2-fix \"**/*.md\" \"#node_modules\"",
    "postinstall": "./scripts/install.sh"
  },
  "jest": {
    "collectCoverageFrom": [
      "bin/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.sh$"
    ],
    "moduleFileExtensions": ["js", "json", "node"],
    "testTimeout": 10000
  },
  "keywords": [
    "git",
    "cleanup",
    "branch",
    "maintenance",
    "repository",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.3.0",
    "inquirer": "^8.2.0"
  },
  "devDependencies": {
    "jest": "^27.4.7",
    "eslint": "^8.7.0",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^27.4.7",
    "markdownlint-cli2": "^0.12.1"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
