[general]
ignore=body-is-missing
contrib=contrib-title-conventional-commits
regex-style-search=True

[title-max-length]
line-length=160

[title-min-length]
min-length=10

[title-match-regex]
# Conventional commits format with optional scope
# feat|fix trigger version bumps, others are auxiliary
regex=^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\([a-z0-9-]+\))?: .*$

[body-max-line-length]
line-length=160

[ignore-by-title]
regex=^(Merge pull request|Merge branch).*

[ignore-by-body]
# Ignore automated release commits
regex=^Release v[0-9]+\.[0-9]+\.[0-9]+.*
