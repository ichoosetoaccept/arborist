[general]
ignore=body-is-missing
contrib=contrib-title-conventional-commits

[title-max-length]
line-length=72

[title-min-length]
min-length=10

[title-match-regex]
regex=^(feat|fix|docs|style|refactor|perf|test|chore|ci|build|revert)(\([a-z0-9-]+\))?: .*$

[body-max-line-length]
line-length=72

[ignore-by-title]
regex=^Merge branch.*

[trailer-exists]
trailers=Changelog
